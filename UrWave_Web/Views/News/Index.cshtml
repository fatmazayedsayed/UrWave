@model IEnumerable<UrWave.Model.Dtos.NewsDto>

@{
    ViewData["Title"] = "Index";
}

<h1>News</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News_Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.News_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.News_Description)
                </td>

            </tr>
        }
    </tbody>
</table>
